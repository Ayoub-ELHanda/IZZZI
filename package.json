{
  "name": "izzzi",
  "version": "0.0.1",
  "private": true,
  "description": "IZZZI - Plateforme de recueil d'avis Ã©tudiants",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:backend": "npm run dev --workspace=@izzzi/backend",
    "dev:frontend": "npm run dev --workspace=@izzzi/frontend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@izzzi/backend",
    "build:frontend": "npm run build --workspace=@izzzi/frontend",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rimraf apps/*/dist apps/*/node_modules packages/*/dist packages/*/node_modules node_modules",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  }
}



